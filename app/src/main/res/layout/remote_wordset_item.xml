<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wordset_icon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <TextView
        android:id="@+id/wordset_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/wordset_icon"
        android:layout_toStartOf="@+id/add_button"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="18sp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <TextView
        android:id="@+id/wordset_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wordset_title"
        android:layout_toEndOf="@+id/wordset_icon"
        android:layout_toStartOf="@+id/add_button"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/colorTextMinor"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/wordset_repo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wordset_size"
        android:layout_toEndOf="@+id/wordset_icon"
        android:layout_toStartOf="@+id/add_button"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/colorTextMinor"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <at.markushi.ui.CircleButton
        android:id="@+id/add_button"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_add_gray_32dp"
        app:cb_color="#F0F0F0"
        app:cb_pressedRingWidth="8dip"
        android:layout_margin="4dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        />

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/wordset_install_progress"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:cpv_animAutostart="true"
        app:cpv_animSyncDuration="300" />

</RelativeLayout>