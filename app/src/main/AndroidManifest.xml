<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.duckdns.dcnick3.learnenglish">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_learnenglish_plain"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_learnenglish_plain"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".layout.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".layout.WordSetActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".layout.WordSetBrowserActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".layout.LearningActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".layout.RemoteWordsetsActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".layout.RemoteRepositoriesActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>